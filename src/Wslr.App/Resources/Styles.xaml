<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:Wslr.App.Converters">

    <!-- ==================== -->
    <!-- DARK THEME COLORS    -->
    <!-- ==================== -->

    <!-- Background Colors -->
    <Color x:Key="BackgroundColor">#1A1A1A</Color>
    <Color x:Key="SurfaceColor">#202020</Color>
    <Color x:Key="SurfaceHoverColor">#2A2A2A</Color>

    <!-- Border Colors (semi-transparent white) -->
    <Color x:Key="BorderColor">#1AFFFFFF</Color>
    <Color x:Key="BorderHoverColor">#33FFFFFF</Color>

    <!-- Text Colors -->
    <Color x:Key="TextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#9CA3AF</Color>
    <Color x:Key="MutedTextColor">#6B7280</Color>

    <!-- Primary Accent (Windows Blue) -->
    <Color x:Key="PrimaryColor">#0078D4</Color>
    <Color x:Key="PrimaryHoverColor">#1084D8</Color>
    <Color x:Key="PrimaryDarkColor">#005A9E</Color>

    <!-- Secondary -->
    <Color x:Key="SecondaryColor">#6B7280</Color>

    <!-- Status Colors -->
    <Color x:Key="RunningColor">#22C55E</Color>
    <Color x:Key="StoppedColor">#6B7280</Color>

    <!-- Error/Danger Colors -->
    <Color x:Key="ErrorColor">#EF4444</Color>
    <Color x:Key="ErrorBackgroundColor">#7F1D1D</Color>
    <Color x:Key="DangerColor">#DC2626</Color>
    <Color x:Key="DangerHoverColor">#B91C1C</Color>

    <!-- Success Color -->
    <Color x:Key="SuccessColor">#16A34A</Color>
    <Color x:Key="SuccessHoverColor">#22C55E</Color>

    <!-- Stat Accent Colors -->
    <Color x:Key="CpuAccentColor">#22D3EE</Color>
    <Color x:Key="MemoryAccentColor">#A78BFA</Color>
    <Color x:Key="DiskAccentColor">#FBBF24</Color>

    <!-- ==================== -->
    <!-- BRUSHES              -->
    <!-- ==================== -->

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource SurfaceHoverColor}" />

    <!-- Border Brushes -->
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="BorderHoverBrush" Color="{StaticResource BorderHoverColor}" />

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}" />
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource MutedTextColor}" />

    <!-- Primary Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />

    <!-- Secondary Brush -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />

    <!-- Status Brushes -->
    <SolidColorBrush x:Key="RunningBrush" Color="{StaticResource RunningColor}" />
    <SolidColorBrush x:Key="StoppedBrush" Color="{StaticResource StoppedColor}" />

    <!-- Error/Danger Brushes -->
    <SolidColorBrush x:Key="ErrorTextBrush" Color="{StaticResource ErrorColor}" />
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="{StaticResource ErrorBackgroundColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="DangerHoverBrush" Color="{StaticResource DangerHoverColor}" />

    <!-- Success Brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="SuccessHoverBrush" Color="{StaticResource SuccessHoverColor}" />

    <!-- Stat Accent Brushes -->
    <SolidColorBrush x:Key="CpuAccentBrush" Color="{StaticResource CpuAccentColor}" />
    <SolidColorBrush x:Key="MemoryAccentBrush" Color="{StaticResource MemoryAccentColor}" />
    <SolidColorBrush x:Key="DiskAccentBrush" Color="{StaticResource DiskAccentColor}" />

    <!-- Semi-transparent Overlay Brushes (white on dark) -->
    <SolidColorBrush x:Key="OverlayLight5Brush" Color="#FFFFFF" Opacity="0.05" />
    <SolidColorBrush x:Key="OverlayLight8Brush" Color="#FFFFFF" Opacity="0.08" />
    <SolidColorBrush x:Key="OverlayLight10Brush" Color="#FFFFFF" Opacity="0.10" />
    <SolidColorBrush x:Key="OverlayLight20Brush" Color="#FFFFFF" Opacity="0.20" />

    <!-- Semi-transparent Accent Background Brushes (20% opacity for icon boxes) -->
    <SolidColorBrush x:Key="CpuAccentBackgroundBrush" Color="{StaticResource CpuAccentColor}" Opacity="0.2" />
    <SolidColorBrush x:Key="MemoryAccentBackgroundBrush" Color="{StaticResource MemoryAccentColor}" Opacity="0.2" />
    <SolidColorBrush x:Key="DiskAccentBackgroundBrush" Color="{StaticResource DiskAccentColor}" Opacity="0.2" />
    <SolidColorBrush x:Key="RunningBackgroundBrush" Color="{StaticResource RunningColor}" Opacity="0.2" />
    <SolidColorBrush x:Key="StoppedBackgroundBrush" Color="{StaticResource StoppedColor}" Opacity="0.2" />

    <!-- ==================== -->
    <!-- TYPOGRAPHY           -->
    <!-- ==================== -->

    <!-- Font Families -->
    <FontFamily x:Key="MonoFontFamily">Cascadia Mono, Consolas, Courier New, monospace</FontFamily>
    <FontFamily x:Key="DefaultFontFamily">Segoe UI, sans-serif</FontFamily>

    <!-- Title - 24px SemiBold -->
    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MonoFontFamily}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

    <!-- Subtitle - 18px SemiBold -->
    <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MonoFontFamily}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

    <!-- Body - 14px Normal -->
    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MonoFontFamily}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

    <!-- BodyStrong - 14px SemiBold -->
    <Style x:Key="BodyStrongTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MonoFontFamily}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

    <!-- Caption - 12px Normal (secondary text) -->
    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MonoFontFamily}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}" />
    </Style>

    <!-- CaptionStrong - 11px Medium (for uppercase headers, set text manually) -->
    <Style x:Key="CaptionStrongTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MonoFontFamily}" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}" />
    </Style>

    <!-- Converters -->
    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    <converters:IndexToBoolConverter x:Key="IndexToBoolConverter" />

    <!-- ==================== -->
    <!-- BUTTON STYLES        -->
    <!-- ==================== -->

    <!-- Base Button Style (shared properties only) -->
    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="FontFamily" Value="{StaticResource MonoFontFamily}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <!-- Primary Button Style (Blue) with smooth animations -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="BackgroundBorder"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <Border.Background>
                            <SolidColorBrush x:Name="BackgroundBrush" Color="{StaticResource PrimaryColor}" />
                        </Border.Background>
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0:0:0.15">
                                        <VisualTransition.GeneratedEasingFunction>
                                            <CubicEase EasingMode="EaseOut" />
                                        </VisualTransition.GeneratedEasingFunction>
                                    </VisualTransition>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="BackgroundBrush"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{StaticResource PrimaryHoverColor}"
                                                        Duration="0:0:0.15" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="BackgroundBrush"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{StaticResource PrimaryDarkColor}"
                                                        Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="BackgroundBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.9"
                                                         Duration="0:0:0.1" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BackgroundBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.5"
                                                         Duration="0:0:0.15" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Secondary Button Style (Dark surface with border) with smooth animations -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="BackgroundBorder"
                            CornerRadius="6"
                            BorderThickness="1"
                            Padding="{TemplateBinding Padding}">
                        <Border.Background>
                            <SolidColorBrush x:Name="BackgroundBrush" Color="#0DFFFFFF" />
                        </Border.Background>
                        <Border.BorderBrush>
                            <SolidColorBrush x:Name="BorderBrush" Color="{StaticResource BorderColor}" />
                        </Border.BorderBrush>
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0:0:0.15">
                                        <VisualTransition.GeneratedEasingFunction>
                                            <CubicEase EasingMode="EaseOut" />
                                        </VisualTransition.GeneratedEasingFunction>
                                    </VisualTransition>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="BackgroundBrush"
                                                        Storyboard.TargetProperty="Color"
                                                        To="#1AFFFFFF"
                                                        Duration="0:0:0.15" />
                                        <ColorAnimation Storyboard.TargetName="BorderBrush"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{StaticResource BorderHoverColor}"
                                                        Duration="0:0:0.15" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="BackgroundBrush"
                                                        Storyboard.TargetProperty="Color"
                                                        To="#14FFFFFF"
                                                        Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="BackgroundBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.9"
                                                         Duration="0:0:0.1" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BackgroundBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.5"
                                                         Duration="0:0:0.15" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

