<Window x:Class="Wslr.App.Dialogs.SelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}"
        Height="350" Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"
                      CornerRadius="8"
                      GlassFrameThickness="0"
                      ResizeBorderThickness="0"
                      UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Border BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Background="{StaticResource BackgroundBrush}">
                <TextBlock Text="{Binding Title}"
                           Foreground="{StaticResource SecondaryTextBrush}"
                           FontFamily="{StaticResource MonoFontFamily}"
                           FontSize="12"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0" />
                <Button x:Name="CloseButton"
                        HorizontalAlignment="Right"
                        Style="{StaticResource WindowControlCloseButtonStyle}"
                        Click="CloseButton_Click"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                    <TextBlock Text="&#xE8BB;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="10" />
                </Button>
            </Grid>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="{Binding Message}"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           FontFamily="{StaticResource MonoFontFamily}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,16" />

                <ListBox Grid.Row="1"
                         x:Name="OptionsListBox"
                         ItemsSource="{Binding Options}"
                         SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}"
                         Background="{StaticResource SurfaceBrush}"
                         BorderBrush="{StaticResource BorderBrush}"
                         BorderThickness="1"
                         Foreground="{StaticResource PrimaryTextBrush}"
                         FontFamily="{StaticResource MonoFontFamily}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="12,8" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd"
                                                Background="Transparent"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource OverlayLight5Brush}" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource AccentBrush}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>

            <!-- Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="20,0,20,20">
                <Button Content="Cancel"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="CancelButton_Click"
                        MinWidth="80"
                        Margin="0,0,8,0" />
                <Button Content="Select"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="SelectButton_Click"
                        MinWidth="80"
                        IsDefault="True" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
