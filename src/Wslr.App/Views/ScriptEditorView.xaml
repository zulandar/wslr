<UserControl x:Class="Wslr.App.Views.ScriptEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Wslr.UI.ViewModels;assembly=Wslr.UI"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ScriptEditorViewModel}"
             d:DesignHeight="700" d:DesignWidth="1200"
             Loaded="OnLoaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="{StaticResource OverlayLight5Brush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <DockPanel>
                <!-- Right-side actions -->
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <!-- Distribution selector -->
                    <TextBlock Text="Distribution:"
                               Style="{StaticResource BodyTextStyle}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0" />
                    <ComboBox ItemsSource="{Binding AvailableDistributions}"
                              SelectedItem="{Binding SelectedDistribution}"
                              MinWidth="150"
                              Margin="0,0,16,0" />

                    <Rectangle Style="{StaticResource ToolbarSeparatorStyle}" Margin="0,0,16,0" />

                    <!-- Run/Cancel button -->
                    <Button Command="{Binding RunScriptCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Padding="16,10"
                            Margin="0,0,8,0"
                            Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE768;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="14"
                                       Margin="0,0,8,0" />
                            <TextBlock Text="Run" />
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding CancelScriptCommand}"
                            Style="{StaticResource DangerButtonStyle}"
                            Padding="16,10"
                            Margin="0,0,8,0"
                            Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE71A;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="14"
                                       Margin="0,0,8,0" />
                            <TextBlock Text="Stop" />
                        </StackPanel>
                    </Button>

                    <!-- Validate button -->
                    <Button Command="{Binding ValidateScriptCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="16,10"
                            Margin="0,0,8,0"
                            IsEnabled="{Binding IsValidating, Converter={StaticResource InverseBoolConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE73E;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="14"
                                       Margin="0,0,8,0" />
                            <TextBlock Text="Validate" />
                        </StackPanel>
                    </Button>

                    <Rectangle Style="{StaticResource ToolbarSeparatorStyle}" Margin="0,0,16,0" />

                    <!-- Save button -->
                    <Button Command="{Binding SaveScriptCommand}"
                            Style="{StaticResource SuccessButtonStyle}"
                            Padding="16,10"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74E;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="14"
                                       Margin="0,0,8,0" />
                            <TextBlock Text="Save" />
                        </StackPanel>
                    </Button>

                    <!-- New button -->
                    <Button Command="{Binding NewScriptCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="16,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE710;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="14"
                                       Margin="0,0,8,0" />
                            <TextBlock Text="New" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Left-side title -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="&#xE756;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="20"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0" />
                    <TextBlock Text="Script Editor"
                               Style="{StaticResource SubtitleTextStyle}"
                               VerticalAlignment="Center" />
                    <TextBlock Text="*"
                               Style="{StaticResource SubtitleTextStyle}"
                               Foreground="{StaticResource RunningBrush}"
                               Margin="4,0,0,0"
                               Visibility="{Binding IsModified, Converter={StaticResource BoolToVisibilityConverter}}" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="250" MaxWidth="400" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Properties and Templates -->
            <Border Grid.Column="0"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,0"
                    Background="{StaticResource SurfaceBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <!-- Script Properties Section -->
                        <TextBlock Text="SCRIPT PROPERTIES"
                                   Style="{StaticResource SettingsSectionHeaderStyle}"
                                   Margin="0,0,0,12" />

                        <TextBlock Text="Name"
                                   Style="{StaticResource CaptionTextStyle}"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   Margin="0,0,0,4" />
                        <TextBox Text="{Binding ScriptName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource SettingsTextBoxStyle}"
                                 Margin="0,0,0,12" />

                        <TextBlock Text="Description"
                                   Style="{StaticResource CaptionTextStyle}"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   Margin="0,0,0,4" />
                        <TextBox Text="{Binding ScriptDescription, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource SettingsTextBoxStyle}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 MinHeight="60"
                                 MaxHeight="120"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,16" />

                        <!-- Templates Section -->
                        <TextBlock Text="TEMPLATES"
                                   Style="{StaticResource SettingsSectionHeaderStyle}"
                                   Margin="0,16,0,12" />

                        <ListBox ItemsSource="{Binding AvailableTemplates}"
                                 SelectedItem="{Binding CurrentTemplate}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 MaxHeight="300">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8"
                                            Margin="0,0,0,4"
                                            Background="{StaticResource OverlayLight5Brush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftDoubleClick"
                                                          Command="{Binding DataContext.LoadTemplateCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                          CommandParameter="{Binding}" />
                                        </Border.InputBindings>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Name}"
                                                       Style="{StaticResource BodyStrongTextStyle}"
                                                       TextTrimming="CharacterEllipsis" />
                                            <Border Grid.Column="1"
                                                    Background="{StaticResource PrimaryBrush}"
                                                    CornerRadius="2"
                                                    Padding="4,1"
                                                    Visibility="{Binding IsBuiltIn, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="Built-in"
                                                           FontSize="10"
                                                           Foreground="White" />
                                            </Border>

                                            <TextBlock Grid.Row="1"
                                                       Grid.ColumnSpan="2"
                                                       Text="{Binding Description}"
                                                       Style="{StaticResource CaptionTextStyle}"
                                                       Foreground="{StaticResource SecondaryTextBrush}"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,4,0,0" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <TextBlock Text="Double-click to load a template"
                                   Style="{StaticResource CaptionTextStyle}"
                                   Foreground="{StaticResource MutedTextBrush}"
                                   Margin="0,8,0,0" />
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Horizontal Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="4"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Transparent"
                          Cursor="SizeWE" />

            <!-- Right Panel: Editor and Console -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="200" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="200" MinHeight="100" />
                </Grid.RowDefinitions>

                <!-- Script Editor -->
                <Border Grid.Row="0"
                        Background="{StaticResource SurfaceBrush}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Editor header -->
                        <Border Grid.Row="0"
                                Background="{StaticResource OverlayLight5Brush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="12,8">
                            <TextBlock Text="Script Content (Bash)"
                                       Style="{StaticResource CaptionTextStyle}"
                                       Foreground="{StaticResource SecondaryTextBrush}" />
                        </Border>

                        <!-- Editor text area -->
                        <TextBox Grid.Row="1"
                                 Text="{Binding ScriptContent, UpdateSourceTrigger=PropertyChanged}"
                                 FontFamily="Cascadia Mono, Consolas, Courier New"
                                 FontSize="13"
                                 Foreground="{StaticResource TextBrush}"
                                 Background="{StaticResource SurfaceBrush}"
                                 BorderThickness="0"
                                 AcceptsReturn="True"
                                 AcceptsTab="True"
                                 TextWrapping="NoWrap"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 Padding="12"
                                 CaretBrush="{StaticResource TextBrush}" />
                    </Grid>
                </Border>

                <!-- Vertical Splitter -->
                <GridSplitter Grid.Row="1"
                              Height="4"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              Background="Transparent"
                              Cursor="SizeNS" />

                <!-- Output Console -->
                <Border Grid.Row="2"
                        Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Console header -->
                        <Border Grid.Row="0"
                                Background="{StaticResource OverlayLight5Brush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="12,8">
                            <DockPanel>
                                <Button DockPanel.Dock="Right"
                                        Content="Clear"
                                        Command="{Binding ClearOutputCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="12,4" />

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Output"
                                               Style="{StaticResource BodyStrongTextStyle}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0" />
                                    <Border Background="{StaticResource RunningBackgroundBrush}"
                                            BorderBrush="{StaticResource RunningBrush}"
                                            BorderThickness="1"
                                            CornerRadius="3"
                                            Padding="8,2"
                                            Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="Running..."
                                                   Foreground="{StaticResource RunningBrush}"
                                                   FontSize="11" />
                                    </Border>
                                </StackPanel>
                            </DockPanel>
                        </Border>

                        <!-- Console output -->
                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto"
                                      Padding="12">
                            <TextBlock Text="{Binding OutputContent}"
                                       FontFamily="Cascadia Mono, Consolas, Courier New"
                                       FontSize="12"
                                       Foreground="{StaticResource SecondaryTextBrush}"
                                       TextWrapping="NoWrap" />
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Messages -->
        <Border Grid.Row="2"
                Background="{StaticResource OverlayLight5Brush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,8">
            <Grid>
                <!-- Success Message -->
                <Border Background="#1A4ADE80"
                        BorderBrush="#4ADE80"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12,6"
                        HorizontalAlignment="Left"
                        Visibility="{Binding SuccessMessage, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="{Binding SuccessMessage}"
                               Foreground="#4ADE80" />
                </Border>

                <!-- Error Message -->
                <Border Background="#1AF87171"
                        BorderBrush="#F87171"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12,6"
                        HorizontalAlignment="Left"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="#F87171" />
                </Border>

                <!-- Validation/Running indicators -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <TextBlock Text="Validating..."
                               Style="{StaticResource CaptionTextStyle}"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               Visibility="{Binding IsValidating, Converter={StaticResource BoolToVisibilityConverter}}"
                               Margin="0,0,16,0" />
                    <TextBlock Text="{Binding SelectedDistribution, StringFormat='Target: {0}'}"
                               Style="{StaticResource CaptionTextStyle}"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
