<UserControl x:Class="Wslr.App.Views.DistributionListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Wslr.UI.ViewModels;assembly=Wslr.UI"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:DistributionListViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="{StaticResource SurfaceBrush}"
                Padding="8"
                Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal">
                <Button Content="Refresh"
                        Command="{Binding LoadDistributionsCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,0,8,0" />
                <Button Content="Start"
                        Command="{Binding StartDistributionCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,8,0" />
                <Button Content="Stop"
                        Command="{Binding StopDistributionCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,8,0" />
                <Button Content="Delete"
                        Command="{Binding DeleteDistributionCommand}"
                        Style="{StaticResource DangerButtonStyle}"
                        Margin="0,0,8,0" />
                <Separator Margin="8,0" />
                <Button Content="Shutdown All"
                        Command="{Binding ShutdownAllCommand}"
                        Style="{StaticResource SecondaryButtonStyle}" />
                <Separator Margin="8,0" />
                <CheckBox Content="Auto-refresh"
                          IsChecked="{Binding IsAutoRefreshEnabled}"
                          VerticalAlignment="Center"
                          Margin="8,0" />
            </StackPanel>
        </Border>

        <!-- Distribution List -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Distributions}"
                  SelectedItem="{Binding SelectedDistribution}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  Background="White"
                  BorderBrush="{StaticResource BorderBrush}"
                  BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="" Width="32">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Ellipse Width="12" Height="12"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource StoppedBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource RunningBrush}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}"
                                    Width="*"
                                    MinWidth="150" />
                <DataGridTextColumn Header="State"
                                    Binding="{Binding StateText}"
                                    Width="100" />
                <DataGridTextColumn Header="Version"
                                    Binding="{Binding Version}"
                                    Width="70" />
                <DataGridTemplateColumn Header="Default" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="Default"
                                       Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibilityConverter}}"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       FontWeight="SemiBold" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Start" Command="{Binding StartDistributionCommand}" />
                    <MenuItem Header="Stop" Command="{Binding StopDistributionCommand}" />
                    <Separator />
                    <MenuItem Header="Delete" Command="{Binding DeleteDistributionCommand}" />
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>

        <!-- Loading/Error Overlay -->
        <Grid Grid.Row="1"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="White" Opacity="0.8" />
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Loading..." FontSize="16" />
            </StackPanel>
        </Grid>

        <!-- Error Message -->
        <Border Grid.Row="2"
                Background="{StaticResource ErrorBackgroundBrush}"
                Padding="8"
                Margin="0,8,0,0"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="{StaticResource ErrorTextBrush}"
                       TextWrapping="Wrap" />
        </Border>
    </Grid>
</UserControl>
