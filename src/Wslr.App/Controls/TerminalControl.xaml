<UserControl x:Class="Wslr.App.Controls.TerminalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             Background="#1A1A1A">
    <Grid>
        <!-- WebView2 Terminal -->
        <wv2:WebView2 x:Name="TerminalWebView"
                      DefaultBackgroundColor="#1A1A1A"
                      Visibility="Collapsed" />

        <!-- Loading indicator (shown while WebView2 initializes) -->
        <StackPanel x:Name="LoadingPanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Initializing terminal..."
                       Foreground="#9CA3AF"
                       FontFamily="Cascadia Mono, Consolas, monospace"
                       FontSize="14"
                       HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Error display -->
        <Border x:Name="ErrorPanel"
                Background="#7F1D1D"
                CornerRadius="8"
                Padding="16"
                Margin="24"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Terminal Error"
                           Foreground="#FCA5A5"
                           FontFamily="Cascadia Mono, Consolas, monospace"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8" />
                <TextBlock x:Name="ErrorMessage"
                           Foreground="#FFFFFF"
                           FontFamily="Cascadia Mono, Consolas, monospace"
                           FontSize="14"
                           TextWrapping="Wrap"
                           MaxWidth="400" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
